<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/charca_3_fondo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/charca_x_3_figures_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_1_ficha_mariquita" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_1_ficha_mariquita" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_1_ficha_mariquita" />

                <ImageView
                    android:id="@+id/charca_3_target1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/charca_3_1_ficha_incognita"
                    android:scaleType="fitStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_1" />

                <ImageView
                    android:id="@+id/charca_3_target2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/charca_3_1_ficha_incognita"
                    android:scaleType="fitStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_1_ficha_mariquita" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_2_ficha_mariquita" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_1_ficha_mariquita" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/charca_3_3_ficha_mariquita_1" />

                <ImageView
                    android:id="@+id/charca_3_target3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/charca_3_1_ficha_incognita"
                    android:scaleType="fitStart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/charca_3_figure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/charca_3_3_ficha_mariquita_1"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/charca_3_figure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/charca_3_3_ficha_mariquita_2"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/charca_3_figure3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/charca_3_2_ficha_mariquita"
                android:scaleType="fitStart" />

            <ImageView
                android:id="@+id/charca_3_figure4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/charca_3_1_ficha_mariquita"
                android:scaleType="fitStart" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>