<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/portada_caja_niveles"
    android:orientation="vertical"
        android:padding="@dimen/dialog_level_padding" >

    <eu.lapecera.jolastoki.widget.TypographyTextView
        style="@style/bigText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/activity_area_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <eu.lapecera.jolastoki.widget.TypographyButton
            android:id="@+id/level_one_btn"
            style="@style/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/portada_bt_nivel"
            android:text="1" />

        <eu.lapecera.jolastoki.widget.TypographyButton
            android:id="@+id/level_two_btn"
            style="@style/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/portada_bt_nivel"
            android:text="2" />

        <eu.lapecera.jolastoki.widget.TypographyButton
            android:id="@+id/level_three_btn"
            style="@style/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/portada_bt_nivel"
            android:text="3" />
    </LinearLayout>

</LinearLayout>