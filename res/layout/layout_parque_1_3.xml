<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/parque_3_1_fondo" />

    <LinearLayout
        android:id="@+id/parque_1_3_box_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/parque_3_1_caja"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/parque_1_3_box_container_padding_bottom"
        android:paddingLeft="@dimen/parque_1_3_box_container_padding_left"
        android:paddingRight="@dimen/parque_1_3_box_container_padding_right"
        android:paddingTop="@dimen/parque_1_3_box_container_padding_top" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/parque_1_3_target1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_rectangulo_off"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/parque_1_3_target2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_triangulo_off"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/parque_1_3_target3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_cuadrado_off"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/parque_1_3_target4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_pentagono_off"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/parque_1_3_target5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_circulo_off" />

            <ImageView
                android:id="@+id/parque_1_3_target6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/parque_3_1_hexagono_off"
                android:scaleType="fitCenter" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/parque_1_3_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parque_1_3_bt2"
        android:layout_toLeftOf="@id/parque_1_3_box_container"
        android:rotation="30"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_cuadrado_on" />

    <ImageView
        android:id="@+id/parque_1_3_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parque_1_3_bt3"
        android:layout_toLeftOf="@id/parque_1_3_box_container"
        android:rotation="-30"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_triangulo_on" />

    <ImageView
        android:id="@+id/parque_1_3_bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/parque_1_3_box_container"
        android:rotation="60"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_rectangulo_on" />

    <ImageView
        android:id="@+id/parque_1_3_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parque_1_3_bt5"
        android:layout_toRightOf="@id/parque_1_3_box_container"
        android:rotation="15"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_hexagono_on" />

    <ImageView
        android:id="@+id/parque_1_3_bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/parque_1_3_bt6"
        android:layout_toRightOf="@id/parque_1_3_box_container"
        android:rotation="60"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_circulo_on" />

    <ImageView
        android:id="@+id/parque_1_3_bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/parque_1_3_box_container"
        android:rotation="25"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_1_pentagono_on" />

</RelativeLayout>