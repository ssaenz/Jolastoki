<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parque_3_3_fondo" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
        
        
        
        
        <RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/parque_3_3_cartelito" />

    <TextView
        style="@style/bigText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/parque_3_3_texto_cartelito_margin_bottom"
        android:gravity="center"
        android:text="@string/cubo" />

</RelativeLayout>

        
        
        
    </LinearLayout>
    

    <ImageView
        android:id="@+id/parque_3_3_bt_cilindro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parque_3_3_bt_cilindro" 
        android:layout_toLeftOf="@+id/container"
        android:layout_above="@+id/figures_container"
        />
    <ImageView
        android:id="@+id/parque_3_3_bt_esfera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parque_3_3_bt_esfera"
        android:layout_above="@+id/figures_container"  />
    
    <LinearLayout 
        android:id="@+id/figures_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/container"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        
        <ImageView
        android:id="@+id/parque_3_3_bt_priramide"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/parque_3_3_bt_piramide" />

    

    <ImageView
        android:id="@+id/parque_3_3_bt_prisma"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/parque_3_3_bt_prisma"/>

    <ImageView
        android:id="@+id/parque_3_3_bt_cubo"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/parque_3_3_bt_cubo" />
        
    </LinearLayout>

    

</RelativeLayout>