<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/biblioteca_1_fondo" />

    <RelativeLayout
        android:id="@+id/targetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/biblioteca_x_2_cinta_margin_bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/biblioteca_1_cinta"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/biblioteca_x_2_padding_cinta"
            android:paddingRight="@dimen/biblioteca_x_2_padding_cinta" >

            <ImageView
                android:id="@+id/biblioteca_2_figure1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt1_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt2_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt3_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt4_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt5_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt6_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt7_off" />

            <ImageView
                android:id="@+id/biblioteca_2_figure8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/biblioteca_2_1_bt8_off" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/targetContainer"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_header_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/biblioteca_x_1_libro_content_margin"
            android:orientation="vertical" >
            

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_1_uda"
                        android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:layout_marginRight="@dimen/biblioteca_x_2_target_margin"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target4" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target6" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:layout_marginRight="@dimen/biblioteca_x_2_target_margin"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target3" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target2" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/biblioteca_x_1_libro_content_margin"
            android:orientation="vertical"  >
            
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_1_negua"
                        android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                android:layout_marginRight="@dimen/biblioteca_x_2_target_margin"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target1" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target8" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                android:layout_marginRight="@dimen/biblioteca_x_2_target_margin"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target7" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/extraSmallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biblioteca_1_2_target5" />

                    <ImageView
                        android:id="@+id/biblioteca_2_target5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/biblioteca_2_2_pieza_base"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>